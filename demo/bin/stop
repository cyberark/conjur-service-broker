#!/bin/bash -e

fatal () {
  echo "$@" >&2
  exit 1
}

[[ -n `which cf` ]] || fatal "Cloud Foundry command line tool not found in \$PATH"
[[ `cf dev status | head -n1` -eq 'Running' ]] || cf dev start

rm -rf tmp/api_key

docker-compose stop pg conjur
docker-compose rm -f pg conjur

cf delete-space demo -f || true